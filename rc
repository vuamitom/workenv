if [[ $SHELL == *"zsh"* ]]
then
    # http://www.nparikh.org/unix/prompt.php
    autoload -U colors
    colors
    export PS1=$'\e[0;36m%n\e[0m@\e[0;33m%-2m\e[0m: \e[0;32m %c \e[0m%# '
else 
    export PS1='\[\e]0;\u@\h: \w\a\]\[\e[33m\]\u\[\e[0m\]@\[\e[36m\]\h\[\e[0m\](\[\e[32m\]\w\[\])\n\[\e[32m\][\[\e[31m\]\#\[\e[32m\]]\[\e[0m\]\$'
fi
